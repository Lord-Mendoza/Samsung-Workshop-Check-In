<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="25dp">

    <TextView
        android:id="@+id/textView"
        android:layout_width="370dp"
        android:layout_height="100dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="Thank you for visiting us today! Please fill in the information below:"
        android:textAlignment="center"
        android:textSize="25sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_secret" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="111dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:text="Name:"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/eTxt_Name"
        app:layout_constraintStart_toStartOf="@+id/eTxt_Name"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="1.0" />

    <EditText
        android:id="@+id/eTxt_Name"
        android:layout_width="343dp"
        android:layout_height="51dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="John Doe"
        android:inputType="textCapWords"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="234dp"
        android:layout_height="wrap_content"
        android:text="Email Address:"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/eTxt_Email"
        app:layout_constraintStart_toStartOf="@+id/eTxt_Name" />

    <EditText
        android:id="@+id/eTxt_Email"
        android:layout_width="343dp"
        android:layout_height="53dp"
        android:layout_marginBottom="12dp"
        android:ems="10"
        android:hint="john.doe@email.com"
        android:inputType="textEmailAddress"
        android:textSize="25sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_Submit"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_Submit"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="132dp"
        android:onClick="submitInfo"
        android:text="Submit"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/img_secret"
        android:layout_width="242dp"
        android:layout_height="46dp"
        android:layout_marginTop="72dp"
        android:onClick="secretPage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/samsung"
        tools:srcCompat="@drawable/samsung" />

</android.support.constraint.ConstraintLayout>